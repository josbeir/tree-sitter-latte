<!DOCTYPE html>
<html>
<head>
    <title>Latte Test</title>
    <style>
        body { color: red; }
    </style>
</head>
<body>
    {* This is a Latte comment *}

    {if $user}
        <h1>Hello, <span class="{$class}">{$user}</span>!</h1>
    {elseif $guest}
        <h1>Hello, Guest!</h1>
    {else}
        <h1>Please log in</h1>
    {/if}

    {block content}
        <p>Block content here</p>
    {/block}

    {macro greet($name)}
        <p>Hello, {$name}!</p>
    {/macro}

    {greet('World')}

    <script>
        console.log('JavaScript here');
    </script>
</body>
</html>
